{
  "openapi": "3.0.0",
  "info": {
    "title": "CRUIS API - EBSCO Authentication and Proxy Service",
    "version": "1.0.0",
    "description": "Backend API server for EBSCO authentication and proxy services. This API provides endpoints to authenticate with EBSCO using library card credentials and proxy authenticated requests to EBSCO services."
  },
  "servers": [
    {
      "url": "http://localhost:3001",
      "description": "Local development server"
    }
  ],
  "paths": {
    "/api/auth/ebsco": {
      "post": {
        "summary": "Authenticate with EBSCO",
        "description": "Authenticates with EBSCO using library card credentials and returns an authentication token.",
        "tags": ["Authentication"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["cardNumber"],
                "properties": {
                  "cardNumber": {
                    "type": "string",
                    "description": "Library card number",
                    "example": "1001600244772"
                  },
                  "password": {
                    "type": "string",
                    "description": "Library card password (optional)",
                    "example": "your-password"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Authentication successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "authToken": {
                      "type": "string",
                      "description": "EBSCO authentication cookie value"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request - missing cardNumber or password",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "Authentication failed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/api/ebsco-proxy/{path}": {
      "get": {
        "summary": "Proxy GET request to EBSCO",
        "description": "Proxies an authenticated GET request to EBSCO services",
        "tags": ["Proxy"],
        "parameters": [
          {
            "name": "path",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The target path after EBSCO domain (e.g., search.ebscohost.com/api/v1/search)",
            "example": "search.ebscohost.com/api/v1/search"
          },
          {
            "name": "X-Auth-Token",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Authentication token received from /api/auth/ebsco"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful proxy response"
          },
          "401": {
            "description": "Missing or invalid auth token",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Proxy request failed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Proxy POST request to EBSCO",
        "description": "Proxies an authenticated POST request to EBSCO services",
        "tags": ["Proxy"],
        "parameters": [
          {
            "name": "path",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "The target path after EBSCO domain",
            "example": "search.ebscohost.com/api/v1/search"
          },
          {
            "name": "X-Auth-Token",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "Authentication token received from /api/auth/ebsco"
          }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful proxy response"
          },
          "401": {
            "description": "Missing or invalid auth token",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "500": {
            "description": "Proxy request failed",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/health": {
      "get": {
        "summary": "Health check",
        "description": "Returns the health status of the API",
        "tags": ["Health"],
        "responses": {
          "200": {
            "description": "Service is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "ok"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Error": {
        "type": "object",
        "properties": {
          "error": {
            "type": "string",
            "description": "Error message"
          },
          "message": {
            "type": "string",
            "description": "Detailed error message"
          },
          "status": {
            "type": "integer",
            "description": "HTTP status code"
          }
        }
      }
    }
  }
}
